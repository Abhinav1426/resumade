{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume",
  "description": "Schema for a resume",
  "type": "object",
  "properties": {
    "personal_information": {
      "type": "object",
      "description": "Personal details of the candidate",
      "properties": {
        "name": {
          "type": "string",
          "description": "Full name of the candidate"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address of the candidate"
        },
        "phone": {
          "type": "string",
          "description": "Phone number of the candidate"
        },
        "location": {
          "type": "string",
          "description": "Current location of the candidate"
        },
        "linkedin": {
          "type": "string",
          "format": "url",
          "description": "LinkedIn profile URL"
        },
        "github": {
          "type": "string",
          "format": "url",
          "description": "GitHub profile URL"
        },
        "portfolio": {
          "type": "string",
          "format": "url",
          "description": "Personal portfolio URL"
        }
      },
      "required": [
        "name",
        "email",
        "phone"
      ]
    },
    "summary": {
      "type": "string",
      "description": "Brief summary or objective of the candidate"
    },
    "experience": {
      "type": "array",
      "description": "List of work experiences",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Job title"
          },
          "company": {
            "type": "string",
            "description": "Company name"
          },
          "location": {
            "type": "string",
            "description": "Location of the company"
          },
          "start_date": {
            "type": "string",
            "format": "date",
            "description": "Start date of the job (YYYY-MM-DD)"
          },
          "end_date": {
            "type": "string",
            "format": "date",
            "description": "End date of the job (YYYY-MM-DD). Use 'Present' if currently employed."
          },
          "description": {
            "type": "string",
            "description": "Description of the job responsibilities and achievements"
          }
        },
        "required": [
          "title",
          "company",
          "start_date",
          "description"
        ]
      }
    },
    "education": {
      "type": "array",
      "description": "List of educational qualifications",
      "items": {
        "type": "object",
        "properties": {
          "institution": {
            "type": "string",
            "description": "Name of the institution"
          },
          "degree": {
            "type": "string",
            "description": "Degree obtained"
          },
          "major": {
            "type": "string",
            "description": "Major field of study"
          },
          "minor": {
            "type": "string",
            "description": "Minor field of study"
          },
          "graduation_date": {
            "type": "string",
            "format": "date",
            "description": "Graduation date (YYYY-MM-DD)"
          },
          "description": {
            "type": "string",
            "description": "Description of relevant coursework or achievements"
          }
        },
        "required": [
          "institution",
          "degree",
          "major",
          "graduation_date"
        ]
      }
    },
    "skills": {
      "type": "array",
      "description": "List of skills",
      "items": {
        "type": "string",
        "description": "Skill name"
      }
    },
    "projects": {
      "type": "array",
      "description": "List of personal projects",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the project"
          },
          "description": {
            "type": "string",
            "description": "Brief description of the project"
          },
          "url": {
            "type": "string",
            "format": "url",
            "description": "URL of the project"
          },
          "technologies": {
            "type": "array",
            "description": "List of technologies used in the project",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "description"
        ]
      }
    },
    "certifications": {
      "type": "array",
      "description": "List of certifications",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the certification"
          },
          "issuing_organization": {
            "type": "string",
            "description": "Organization that issued the certification"
          },
          "issue_date": {
            "type": "string",
            "format": "date",
            "description": "Issue date of the certification (YYYY-MM-DD)"
          },
          "expiration_date": {
            "type": "string",
            "format": "date",
            "description": "Expiration date of the certification (YYYY-MM-DD)"
          },
          "credential_id": {
            "type": "string",
            "description": "Credential ID of the certification"
          },
          "url": {
            "type": "string",
            "format": "url",
            "description": "URL to verify the certification"
          }
        },
        "required": [
          "name",
          "issuing_organization",
          "issue_date"
        ]
      }
    },
    "awards": {
      "type": "array",
      "description": "List of awards and honors",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the award"
          },
          "organization": {
            "type": "string",
            "description": "Organization that granted the award"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date the award was granted (YYYY-MM-DD)"
          },
          "description": {
            "type": "string",
            "description": "Description of the award"
          }
        },
        "required": [
          "name",
          "organization",
          "date"
        ]
      }
    },
    "languages": {
      "type": "array",
      "description": "List of languages known",
      "items": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string",
            "description": "Name of the language"
          },
          "proficiency": {
            "type": "string",
            "enum": [
              "Beginner",
              "Elementary",
              "Limited Working Proficiency",
              "Professional Working Proficiency",
              "Full Professional Proficiency",
              "Native or Bilingual Proficiency"
            ],
            "description": "Proficiency level in the language"
          }
        },
        "required": [
          "language",
          "proficiency"
        ]
      }
    },
    "interests": {
      "type": "array",
      "description": "List of interests",
      "items": {
        "type": "string",
        "description": "Interest"
      }
    },
    "references": {
      "type": "array",
      "description": "List of references",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the reference"
          },
          "title": {
            "type": "string",
            "description": "Title of the reference"
          },
          "company": {
            "type": "string",
            "description": "Company of the reference"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email address of the reference"
          },
          "phone": {
            "type": "string",
            "description": "Phone number of the reference"
          },
          "description": {
            "type": "string",
            "description": "Description of the reference"
          }
        },
        "required": [
          "name",
          "email",
          "phone"
        ]
      }
    }
  },
  "required": [
    "personal_information",
    "experience",
    "education",
    "skills"
  ]
}
